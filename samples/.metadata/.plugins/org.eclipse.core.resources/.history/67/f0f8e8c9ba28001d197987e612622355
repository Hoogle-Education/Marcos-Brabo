package application;

class Aluno {
	
	String nome;
	int idade;
	double altura;
	double media;
	
	void fazerAniversario () {
		idade++;
	}
}

public class App {

	public static void main(String[] args) {
		
		Aluno joao = new Aluno();
		
		joao.nome = "Joao da Silva";
		joao.idade = 15;
		joao.media = 7.5;
		joao.altura = 1.7;
	
		System.out.println("Idade = " + joao.idade);
	
		joao.fazerAniversario();
	
		System.out.println("Idade = " + joao.idade);
	}

}
